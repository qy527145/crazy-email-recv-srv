# AEmail Server Configuration
# Copy this file to cfg.ini and modify as needed

[smtpd]
# SMTP server host - network binding options:
# auto = Auto-detect best binding (recommended)
# :: = IPv6 dual-stack (supports both IPv4 and IPv6)
# 0.0.0.0 = IPv4 all interfaces
# 127.0.0.1 = IPv4 localhost only
host = auto
# SMTP server port - use 25 for standard SMTP, 2525 for testing
port = 25

[rest]
# REST API port - web interface and API endpoints
port = 14000

# Environment variables can override these settings:
# SMTP_HOST - SMTP server host
# SMTP_PORT - SMTP server port
# REST_PORT - REST API port
